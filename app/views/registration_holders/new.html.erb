<div class="#new_registration_holder">
<h1><%= @this_month.first.second.strftime('%B') %> Courses</h1>
<%= form_for [@student, @registration_holder] do |f| %>

  <%= f.label(:first_role, "#{@this_month.first.courses.first.title}") %>
  <%= f.select(:first_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:second_role, "#{@this_month.first.courses.second.title}") %>
  <%= f.select(:second_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:third_role, "#{@this_month.second.courses.first.title}") %>
  <%= f.select(:third_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:fourth_role, "#{@this_month.second.courses.second.title}") %>
  <%= f.select(:fourth_role, ["None", "Lead", "Follow"]) %>

  <%= f.hidden_field(:month, value: @this_month.first.third.month.to_s) %>


    <div class="field">
      <%= label_tag :card_number, "Credit Card Number" %>
      <%= text_field_tag :card_number, nil, name: nil, data: {stripe: "number"}  %>
    </div>
    <div class="field">
      <%= label_tag :card_code, "Security Code on Card (CVC)" %>
      <%= text_field_tag :card_code, nil, name: nil, data: {stripe: "cvc"} %>
    </div>
    <div class="field">
      <%= label_tag :card_month, "Card Expiration" %>
      <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month", data: {stripe: "exp-month"}} %>
      <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year", data: {stripe: "exp-year"}} %>
    </div>


  <%= f.submit "Register for #{@this_month.first.second.strftime('%B')} Classes", class: "button round", id: "current_month_submit" %>
<% end %>
</div>
<br><br>
<h1><%= @next_month.first.second.strftime('%B') %> Courses</h1>
<%= form_for [@student, @registration_holder] do |f| %>

  <%= f.label(:first_role, "#{@next_month.first.courses.first.title}") %>
  <%= f.select(:first_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:second_role, "#{@next_month.first.courses.second.title}") %>
  <%= f.select(:second_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:third_role, "#{@next_month.second.courses.first.title}") %>
  <%= f.select(:third_role, ["None", "Lead", "Follow"]) %>

  <%= f.label(:fourth_role, "#{@next_month.second.courses.second.title}") %>
  <%= f.select(:fourth_role, ["None", "Lead", "Follow"]) %>

  <%= f.hidden_field(:month, value: @next_month.first.third.month.to_s) %>

  <%= f.submit "Register for #{@next_month.first.second.strftime('%B')} Classes", class: "button round" %>
<% end %>
